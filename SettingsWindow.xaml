<Window x:Class="Notes.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="320">
    <Grid>
        <StackPanel Margin="10">
            <Label x:Name="PathLabel">Save path:</Label>
            <TextBox x:Name="txtPath" Width="300" Margin="0 10"/>
            <Button x:Name="BrowseButton" Content="Browse..." Click="Browse_Click"/>
            
            <Label x:Name="LangLabel">Language:</Label>
            <ComboBox x:Name="LanguageSelect"></ComboBox>
            <Button x:Name="SaveButton" Content="Save" Click="Save_Click" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
