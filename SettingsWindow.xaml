<Window x:Class="Notes.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="200" Width="320">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="txtPath" Width="300" Margin="0 10"/>
            <Button Content="Browse..." Click="Browse_Click"/>
            <Button Content="Save Settings" Click="Save_Click" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
